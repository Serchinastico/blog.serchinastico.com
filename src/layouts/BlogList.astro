---
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import FormattedDate from '../components/FormattedDate.astro';
import { type CollectionEntry } from "astro:content";

const { posts } = Astro.props;

type Post = CollectionEntry<'blog' | 'drafts'>
---


<!doctype html>
<html lang="en">
<head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION}/>
</head>
<body>
<Header/>
<main class="md:px-2 px-1">
    <section>
        <ul>
          {
            posts.map((post: Post) => {
              const url = post.collection === "drafts" ? `/drafts/${post.id}/` : `/${post.id}/`

              return (
                      <li class="mb-16 text-black no-underline flex justify-center items-center flex-col">
                          <p class="font-black text-6xl md:text-8xl text-center mb-4 uppercase"><a
                                  class="no-underline text-black" href={url}>{post.data.title}</a></p>
                          <a href={url}>
                              <Image width={720} height={400} src={post.data.heroImage!} alt={post.data.title}/>
                          </a>
                          <p class="mt-4 p-0 text-base font-light">
                              <FormattedDate date={post.data.pubDate}/>
                          </p>
                          <p class="text-xl font-normal text-center md:px-10 md:w-3/4 w-full">
                            {post.data.description}
                          </p>
                          <p class="text-center">
                              <a href={url}>Read more...</a>
                          </p>
                      </li>)
            })
          }
        </ul>
    </section>
</main>
<Footer/>
</body>
</html>
